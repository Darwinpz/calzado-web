
<link rel="stylesheet" href="/css/style.css">

<a class="ir-arriba"  javascript:void(0) title="Volver arriba">
  <span class="fa-stack">
    <i class="fa fa-circle fa-stack-2x"></i>
    <i class="fa fa-arrow-up fa-stack-1x fa-inverse"></i>
  </span>
</a>
<script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script><script  src="/js/scriptarriba.js"></script>
<div class="container">

    <div class="row align-items-center justify-content-center " style="margin-top: 15px;">

        <div class="col-md-5">

            <div class="card p-3 " style="box-shadow: 0 2px 10px rgba(0,0,0,.075);">

                <h4 class="text-center"><b>Iniciar Sesión</b></h4>

                <div class="card-body">

                    <form class="row g-3" method="POST">

                        <div class="col-md-12">
                            <input type="text" class="form-control fs-5" name="identificacion"
                                placeholder="Correo Electrónico o Cédula" value="{{usuario.identificacion}}" required>
                        </div>
                        <div class="col-md-12">

                            <input type="password" class="form-control fs-5" name="clave" placeholder="Contraseña"
                                value="{{usuario.clave}}"  required>
                        </div>

                        <div class="d-grid gap-2">
                            <button class="btn btn-primary btn-block fs-4" type="submit">Ingresar</button>
                        </div>

                        <a href="/recuperarcuenta" class="text-end" style="text-decoration: none;">Olvidé la Contraseña</a>

                        <hr>
                        <a type="button" href="/registro" class="btn btn-success btn-lg mt-3">Crear Nueva Cuenta</a>

                    </form>

                </div>

            </div>

        </div>

    </div>


</div>


