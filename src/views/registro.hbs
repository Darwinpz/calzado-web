<div class="container">

    <div class="row">

        <div class="col">

            <a type="button" href="/" class="btn btn-primary btn-lg mt-3"><i class="fas fa-chevron-left"></i>
                Volver</a>

        </div>

    </div>

    <div class="row mt-3 align-items-center justify-content-center">

        <div class="col-10 mb-3">
                
            <div class="card mb-2" style="box-shadow: 0 2px 10px rgba(0,0,0,.075);">

                <h4 class="card-header"><b>Crear Cuenta</b></h4>

                <div class="card-body">

                    <form class="row g-3" method="POST">

                        <div class="col-md-6">
                            <label class="form-label fs-5"><b>* Cédula:</b></label>
                            <input type="text" class="form-control fs-5" name="cedula" placeholder="Cédula de Identidad"
                                value="{{usuario.cedula}}" required>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fs-5"><b>* Nombres:</b></label>
                            <input type="text" class="form-control fs-5 " name="nombres" placeholder="Nombres Completos"
                                value="{{usuario.nombres}}" required>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fs-5"><b>* Apellidos:</b></label>
                            <input type="text" class="form-control fs-5" name="apellidos"
                                placeholder="Apellidos Completos" value="{{usuario.apellidos}}" required>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fs-5"><b>Genero:</b></label>
                            <select class="form-select fs-5" name="genero" required>
                                <option disabled selected value="">Selecciona...</option>
                                <option value="MASCULINO" {{{select usuario.genero 'MASCULINO'}}}>Masculino</option>
                                <option value="FEMENINO" {{{select usuario.genero 'FEMENINO'}}}>Femenino</option>
                                <option value="OTRO" {{{select usuario.genero 'OTRO'}}}>Otro</option>
                            </select>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fs-5"><b>* Correo:</b></label>
                            <input type="email" class="form-control fs-5" name="correo" placeholder="Correo Electrónico"
                                value="{{usuario.correo}}" required>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fs-5"><b>* Teléfono:</b></label>
                            <input type="text" class="form-control fs-5" name="telefono"
                                placeholder="Telefono" value="{{usuario.telefono}}" required>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fs-5"><b>* Contraseña:</b></label>
                            <div class="input-group">
                                <input type="password" class="form-control fs-5" name="clave" value="{{usuario.clave}}"
                                    placeholder="Contraseña de Acceso" required>
                                <span class="input-group-text btn_ver_clave"><i class="fa fa-eye-slash"></i></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fs-5"><b>* Repetir Contraseña:</b></label>
                            <div class="input-group">
                                <input type="password" class="form-control fs-5" name="confirm_clave"
                                    value="{{usuario.confirm_clave}}" placeholder="Confirmar Contraseña" required>
                                <span class="input-group-text btn_ver_clave"><i class="fa fa-eye-slash"></i></span>
                            </div>
                        </div>

                        <div class="col-12 text-end">

                            <button class="btn btn-success btn-block fs-4" type="submit">
                                <i class="fa fa-user-plus"></i> Crear Cuenta</button>

                        </div>

                    </form>
                </div>

            </div>

        </div>

    </div>

</div>