<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.1/chart.min.js"></script>

<div class="container">

    <a type="button" href="/administrar/reportes" class="btn btn-primary btn-lg "><i class="fas fa-chevron-left"></i>
        Volver</a><br><br>

    <div class="row mb-3">

        <div class="col-12">

            <div class="card">

                <div class="card-header">

                    <h5 class="text-center"><strong>Top 10 Productos más vendidos</strong></h5>

                </div>

                <div class="card-body">

                    <canvas id="Chart_products_top" width="100%" height="25"></canvas>

                    <script>

                        var g1 = "{{valores1}}"
                        var ec1 = "{{encabezado1}}"

                        const ctx1 = document.getElementById('Chart_products_top').getContext('2d');
                        const myChart1 = new Chart(ctx1, {
                            type: 'bar',
                            data: {
                                labels: ec1.split(","),
                                datasets: [{
                                    label: 'Top 10 Productos',
                                    data: g1.split(","),
                                    backgroundColor: [
                                        'rgba(255, 99, 132, 0.2)',
                                        'rgba(54, 162, 235, 0.2)',
                                        'rgba(255, 206, 86, 0.2)',
                                        'rgba(75, 192, 192, 0.2)',
                                        'rgba(153, 102, 255, 0.2)'
                                    ],
                                    borderColor: [
                                        'rgba(255, 99, 132, 1)',
                                        'rgba(54, 162, 235, 1)',
                                        'rgba(255, 206, 86, 1)',
                                        'rgba(75, 192, 192, 1)',
                                        'rgba(153, 102, 255, 1)'
                                    ],
                                    borderWidth: 1
                                }]
                            },
                            options: {
                                scales: {
                                    y: {
                                        beginAtZero: true,
                                        ticks: {
                                            // Include a dollar sign in the ticks
                                            callback: function (value, index, ticks) {
                                                return '$' + value;
                                            }
                                        }
                                    }
                                }
                            }
                        });
                    </script>

                </div>

            </div>

        </div>

    </div>

