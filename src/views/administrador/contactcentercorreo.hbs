<section class="contact-section">
    <div class="container">
        <a type="button" href="/administrar" class="btn btn-primary btn-lg "><i class="fas fa-chevron-left"></i>
            Volver</a>
        <div class="row mt-3">

            <div class="col-lg-6">


            </div>
            <div class="col-lg-12">

                <div class="card mb-2">

                    <h3 class="card-header">Enviar correo</h3>

                    <div class="card-body">

                        <form action="" method="POST" id="contactForm">
                            <div class="row">

                                <div class="col-sm-6 mb-2">
                                    <div class="form-group">
                                        <input class="form-control valid" name="enlace" id="enlace" type="text"
                                            placeholder="Ingresa enlace" value="{{usuario.identificacion}}">
                                    </div>
                                </div>
                                <div class="col-sm-6 mb-2">
                                    <div class="form-group">
                                        <input class="form-control valid" name="asunto" id="asunto" type="message"
                                            placeholder="Ingresa asunto" value="{{usuario.identificacion}}" required>
                                    </div>
                                </div>

                                <div class="col-12 mb-2">
                                    <div class="form-group">
                                        <textarea class="form-control w-100" name="message" id="message" rows="6"
                                            placeholder=" Ingresa el mensaje" value="{{usuario.mensaje}}"
                                            required></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group mt-3">
                                <div class="d-grid gap-2">
                                    <button class="btn btn-primary btn-block fs-4" type="submit">Enviar mensaje</button>
                                </div>
                            </div>
                        </form>

                    </div>

                </div>
            </div>
        </div>
    </div>
</section>