<div class="table-responsive " style="margin-top: auto;">
    <table id="table_categorias" width="100%" cellspacing="0" class="table table-hover ">
        <thead>
            <tr>
                <th class="text-center" scope="col">Nombre</th>
                <th class="text-center" scope="col">descripcion</th>
                <th class="text-center" scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody class="text-center">
            {{#each categorias}}
            <tr>
                <th scope="row">{{nombre}}</th>
                <td>{{descripcion}}</td>
                <td><a type="button" class="btn btn-danger btn-eliminar" data-nombre="{{nombre}}"><i class="fas fa-trash"></i></a> </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

