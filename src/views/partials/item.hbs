{{#each productos}}
<div class="col-md-3 mb-2">

    <div class="card">
        <a  href="/producto/{{_id}}">
            <img src="/img/products/{{imagen foto}}" class="img-fluid card-img-top " alt="...">
        </a>
        <div class="card-body text-center">
            <strong>
                <p class="text-center mb-1">{{nombre}}</p>
            </strong>
            <h5 class="text-center mb-2" style="color: green;">$ 100</h5>
            <div class="container d-flex justify-content-between align-items-center mb-2">

                <span><i class="fas fa-eye"></i> {{views}} </span>
                <span><i class="fas fa-heart" style="color: red;"></i> {{likes}} </span>

            </div>

            <a class="btn btn-primary" href="/producto/{{_id}}"><i class="fas fa-eye"> Ver Producto</i></a>


        </div>
    </div>

</div>

{{/each}}