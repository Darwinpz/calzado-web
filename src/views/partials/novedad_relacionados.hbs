<div class="card mt-3 mb-3">

    <h4 class="card-header text-center"><b>Productos Relacionados</b></h4>

    <div class="card-body">

        <div id="carousel-multi-example" class="carousel slide " data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carousel-multi-example" data-bs-slide-to="0" class="active"
                    aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carousel-multi-example" data-bs-slide-to="1"
                    aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carousel-multi-example" data-bs-slide-to="2"
                    aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active" data-bs-interval="10000">

                    <div class="row">
                        {{#each categoria1}}
                        <div class="col-md-3">
                            <div class="card mb-2">
                                <a href="/producto/{{_id}}"><img class="card-img-top" src="/img/products/{{imagen foto}}" alt="Card image cap"></a>
                                <div class="card-body">
                                    <h4 class="card-title text-center">{{nombre}}</h4>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>

                </div>
                {{#if categoria2}}
                <div class="carousel-item" data-bs-interval="2000">
                    <div class="row">
                        {{#each categoria2}}
                        <div class="col-md-3">
                            <div class="card mb-2">
                                <a href="/producto/{{_id}}"><img class="card-img-top" src="/img/products/{{imagen foto}}" alt="Card image cap"></a>
                                <div class="card-body text-center">
                                    <h4 class="card-title">{{nombre}}</h4>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
                {{/if}}
                {{#if categoria3}}
                <div class="carousel-item">
                    <div class="row">
                        {{#each categoria3}}
                        <div class="col-md-3">
                            <div class="card mb-2">
                                <a href="/producto/{{_id}}"><img class="card-img-top" src="/img/products/{{imagen foto}}" alt="Card image cap"></a>
                                <div class="card-body">
                                    <h4 class="card-title text-center">{{nombre}}</h4>
                                </div>
                            </div>
                        </div>

                        {{/each}}
                    </div>
                </div>
                {{/if}}
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carousel-multi-example"
                data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carousel-multi-example"
                data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>

            </button>
        </div>

    </div>

</div>